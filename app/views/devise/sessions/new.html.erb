<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <div class="card shadow border-0">
        <div class="card-header text-center bg-white border-0">

          <%= image_tag("logo.png",
              alt: "Logo",
              height: "90",
              class: "mb-3 mt-3",
              style: "border: 2px solid rgba(128, 0, 32, 0.86); border-radius: 12px; padding: 2px; background-color: white;"
            ) %>

          <h2 style="color: rgba(128, 0, 32, 0.86); font-family: 'Playfair Display', serif;">
            Mediterraneum
          </h2>
        </div>

        <div class="card-body">
          <% if alert.present? %>
          <div
              class="alert alert-danger alert-dismissible fade show"
              role="alert">
              <%= alert %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% end %>
        
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="row justify-content-center mb-3">
            <div class="col-sm-10">
              <div class="form-group row">
                <%= f.label :email, class: "col-sm-3 col-form-label text-end" %>
                <div class="col-sm-9">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                </div>
              </div>
            </div>
          </div>

          <div class="row justify-content-center mb-3">
            <div class="col-sm-10">
              <div class="form-group row">
                <%= f.label :password, class: "col-sm-3 col-form-label text-end" %>
                <div class="col-sm-9">
                  <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
                </div>
              </div>
            </div>
          </div>

        <% if devise_mapping.rememberable? %>
          <div class="row justify-content-center mb-3">
              <div class="col-sm-10 d-flex justify-content-center">
                <div class="form-check">
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  <%= f.label :remember_me, class: "form-check-label" %>
                </div>
              </div>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.submit "Log in", class: "btn btn-block text-white w-100", style: "background-color: rgba(128, 0, 32, 0.86);" %>
          </div>
          <% end %>

        <div class="text-center">
          <%= link_to "Sign up", new_registration_path(resource_name) %><br>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        </div>
      </div>
    </div>
  </div>
</div>
