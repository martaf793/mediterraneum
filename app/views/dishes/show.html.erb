<div>
  <div>
    <h1>
      Dish <%= @the_dish.name %> details
    </h1>

    <div>
      <div>
        <a href="/dishes">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_dish/<%= @the_dish.id %>">
          Delete dish
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_dish.name %>
      </dd>

      <dt>
        Creator
      </dt>
      <dd>
        <%= @the_dish.creator.email %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_dish.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_dish.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit dish
    </h2>

    <form action="/modify_dish/<%= @the_dish.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_dish.name %>">
      </div>

      <div>
        <input type="hidden" id="creator_id_box" name="query_creator_id" value="<%= @the_dish.creator_id %>">
      </div>

      <button>
        Update dish
      </button>
    </form>
  </div>
</div>

<hr>
