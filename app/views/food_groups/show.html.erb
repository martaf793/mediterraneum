<div class="container mt-4">
  <h1 class="mb-3"><%= @the_food_group.name.capitalize %> Details</h1>

  <div class="mb-4">
    <a href="/food_groups" class="btn btn-secondary">Go back</a>
  </div>

  <dl class="row">
    <dt class="col-sm-2 fw-bold">Name</dt>
    <dd class="col-sm-10"><%= @the_food_group.name.capitalize %></dd>
  </dl>

  <hr class="my-4">

  <div class="mt-4">
    <h2 class="mb-3">Dishes with this Food Group</h2>

    <% if @dish_food_groups.any? %>
      <ul class="list-group">
        <% @dish_food_groups.each do |dfg| %>
          <% if dfg.dish.present? %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <a href="/dishes/<%= dfg.dish.id %>" style="color: rgba(128, 0, 32, 0.86);">
                <%= dfg.dish.name.capitalize %>
              </a>
              <span class="badge bg-secondary rounded-pill"><%= dfg.number_of_instances %></span>
            </li>
          <% end %>
        <% end %>
      </ul>
    <% else %>
      <p class="text-muted">No dishes currently have <%= @the_food_group.name.capitalize %>.</p>
    <% end %>
  </div>

  <hr class="my-4">
</div>
