<div>
  <div>
    <h1>
      List of all food groups
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new food group
    </h2>

    <form action="/insert_food_group" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <button>
        Create food group
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_food_groups.each do |a_food_group| %>
      <tr>
        <td>
          <%= a_food_group.id %>
        </td>

        <td>
          <%= a_food_group.name %>
        </td>

        <td>
          <%= time_ago_in_words(a_food_group.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_food_group.updated_at) %> ago
        </td>

        <td>
          <a href="/food_groups/<%= a_food_group.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
