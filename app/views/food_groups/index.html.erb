<div class="container mt-4">
  <h1 class="mb-4">List of All Food Groups</h1>

  <div class="table-responsive mt-4">
    <table class="table table-bordered table-striped table-hover align-middle text-center"
           style="border-radius: 12px; border-collapse: separate; overflow: hidden;">
      <thead>
        <tr>
          <th style="background-color: rgba(128, 0, 32, 0.86); color: white;">Name</th>
          <th style="background-color: rgba(128, 0, 32, 0.86); color: white;">Created</th>
          <th style="background-color: rgba(128, 0, 32, 0.86); color: white;">Updated</th>
          <th style="background-color: rgba(128, 0, 32, 0.86); color: white;"></th>
        </tr>
      </thead>
      <tbody>
        <% @list_of_food_groups.each do |a_food_group| %>
          <tr>
            <td><%= a_food_group.name.capitalize %></td>
            <td><%= time_ago_in_words(a_food_group.created_at) %> ago</td>
            <td><%= time_ago_in_words(a_food_group.updated_at) %> ago</td>
            <td>
              <a class="btn btn-outline-primary btn-sm"
                 href="/food_groups/<%= a_food_group.id %>"
                 style="--bs-btn-color: rgba(128, 0, 32, 0.86);
                        --bs-btn-border-color: rgba(128, 0, 32, 0.86);
                        --bs-btn-hover-bg: rgba(128, 0, 32, 0.86);
                        --bs-btn-hover-border-color: rgba(128, 0, 32, 0.86);
                        --bs-btn-hover-color: white;">
                Show details
              </a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <hr>
</div>
