 <!DOCTYPE html>
 <html>
   <head>
     <title>Rails Template</title>
     <meta charset="utf-8">
     <meta name="viewport" content="width=device-width, initial-scale=1">
     <%= csrf_meta_tags %>
     <%= csp_meta_tag %>

     <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
     <link
       rel="stylesheet"
       href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
     >

     <%= javascript_importmap_tags %>
     <script
       defer
       src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
     ></script>
     <script
       defer
       src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/js/all.min.js"
     ></script>
   </head>
  
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
      <div class="navbar-brand d-flex align-items-center ms-3"> <!-- adds left margin -->
        <img src="/assets/logo.png"
            alt="Logo"
            height="40"
            class="me-2"
            style="border: 2px solid #800020; border-radius: 8px; padding: 2px; background-color: #fff;">
        
        <a class="btn fw-bold fs-5 py-1 px-3"
          style="background-color:rgba(128, 0, 32, 0.86); color: white; font-family: 'Playfair Display', serif; border-radius: 0.375rem;"
          href="/">
          MEDITERRANEUM
        </a>
      </div>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <% if current_user %>
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/dishes">Dishes</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/assigned_meals">Assigned Meals</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/food_groups">Food Groups</a>
              </li>
            </ul>

            <ul class="navbar-nav ms-auto">
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" data-turbo="false">
                  Profile
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                  <li><a class="dropdown-item" href="/users/edit">Edit profile</a></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><a class="dropdown-item" href="/users/sign_out">Sign out</a></li>
                </ul>
              </li>
            </ul>
          <% else %>
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <a class="nav-link" href="/users/sign_up">Sign up</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/users/sign_in">Sign in</a>
              </li>
            </ul>
          <% end %>
        </div>
      </div>
    </nav>
    
    <% if notice.present? %>
      <div>
        <%= notice %>
      </div>
    <% end %>

    <% if alert.present? %>
      <div>
        <%= alert %>
      </div>
    <% end %>
      <%= yield %>
  </body>
</html>
